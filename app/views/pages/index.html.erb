<section class="hero">
    <% if @twitch.is_live %>
        <iframe class="live-stream video" src="http://www.twitch.tv/crank/embed"></iframe>
    <% elsif !@youtube.nil? %>
        <div id="hero-yt-player" class="highlight video" data-video-url="<%= @youtube.get_url.gsub(/\?version/, '?wmode=transparent&loop=1&version') %>" class="bg-stream yt"></div>
    <% end %>

    <%= image_tag "mask-bottom-left.png", :class => 'mask-bottom-left' %>
    <%= image_tag "mask-bottom-right.png", :class => 'mask-bottom-right' %>

    <div class="player-intro">
        <%= image_tag "hero-crank.png", :class => 'crank' %>
        <h1>Jaewon 'CranK' Choi</h1>
        <p>Streaming on the KR/NA/EU ladder</p>
    </div>

    <% if @twitch.is_live %>
        <div class="status live">
            <em><a href="/stream/">Live</a></em>
        </div>
    <% elsif !@youtube.nil? %>
        <div class="status highlight">
            <div class="header">Video highlight</div>
            <h3><a class="goto" href="<%= @youtube.get_url %>"><%= @youtube.title %></a>&nbsp;<a class="cta fullscreen" href="#" data-mfp-src="<%= @youtube.url %>"><i class="fa fa-expand"></i></a></h3>
            <div class="footer"><a class="cta highlights" href="/videohighlights/">View all <i class="fa fa-arrow-right"></i></a></div>
        </div>
    <% end %>
</section>

<%= render "sponsors" %>

<section class="donate">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="donations">
                    <h3>Donations</h3>
                    <p>Subscribe to my <a href="http://www.twitch.tv/crank/">Twitch channel</a> or consider making a donation directly to <a href="https://www.twitchalerts.com/tip/crank">me</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="tweet-list">
    <div class="container">
        <header>
            <a class="cta" href="https://twitter.com/axcrank"><i class="fa fa-twitter"></i></a>
            <h2>Tweets</h2>
        </header>
        <% if @tweets.length > 0 %>
            <% @tweets.each_with_index do |tweet, index| %>

                <% if index % 4 === 0 %>
                    <div class="row">
                <% end %>

                    <div class="col-md-3">
                        <article><%= auto_link(tweet.parsed_text) %></article>
                    </div>

                <% if (index+1) % 4 === 0 || index+1 >= @tweets.length  %>
                    </div>
                <% end %>
            <% end %>
        <% else %>
           <p>No tweets could be loaded.</p>
        <% end %>
    </div>
</section>

